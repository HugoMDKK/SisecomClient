@model ClientModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">
    <h1 class="display-4">Editar dados do Cliente</h1>
</div>

<form asp-controller="Client" asp-action="Att" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="nome">Nome/Razão Social</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite aqui!">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="NomeAbreviado">Nome Abreviado/Nome Fantasia</label>
        <input type="text" asp-for="Abreviado" class=" form-control" placeholder="Digite aqui!">
        @Html.ValidationMessageFor(x => x.Abreviado)
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite aqui!">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="=form-group">
        <label for="Telefone">Telefone/Celular</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite aqui!">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <br />
    <button type="submit" class="btn btn-primary btn-lg">Editar</button>
    <a class="btn btn-secondary btn-lg" asp-controller="Client" asp-action="Index" role="button">Voltar</a>

</form>

