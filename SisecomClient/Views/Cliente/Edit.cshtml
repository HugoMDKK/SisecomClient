<div class="text-center">
    <h1 class="display-4">Editar</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome/Razão Social</label>
        <input type="text" class="form-control" placeholder="Digite aqui!">
        <small id="emailHelp" class="form-text text-muted">Obrigatório!</small>
    </div>

    <div class="form-group">
        <label for="nome">Nome Abreviado/Nome Fantasia</label>
        <input type="text" class="form-control" placeholder="Digite aqui!">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" placeholder="Digite aqui!">

    </div>

    <div class="form-group">
        <label for="exampleInputPFPJ">Tipo(PF/PJ)</label>
        <div class="custom-control custom-radio">
            <input type="radio" id="Selecionar" name="Selecionar" class="custom-control-input" checked="">
            <label class="custom-control-label" for="Selecionar">PF</label>
        </div>
        <div class="custom-control custom-radio">
            <input type="radio" id="Selecionar02" name="Selecionar" class="custom-control-input">
            <label class="custom-control-label" for="Selecionar">PJ</label>
        </div>
        <br />
        <div class="form-group">
            <label for="exampleInputPFPJ">Tipo(CPF/CNPJ)</label>
            <div class="custom-control custom-radio">
                <input type="radio" id="Selecionar03" name="Selecionar02" class="custom-control-input" checked="">
                <label class="custom-control-label" for="Selecionar02">CPF</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" id="Selecionar04" name="Selecionar02" class="custom-control-input">
                <label class="custom-control-label" for="Selecionar02">CNPJ</label>
                <input type="text" class="form-control" placeholder="Digite seu CPF se for o caso!">
            </div>
            <br />
            <div class="form-group">
                <label for="exampleInputPFPJ">Tipo(RG/IE)</label>
                <div class="custom-control custom-radio">
                    <input type="radio" id="Selecionar05" name="Selecionar03" class="custom-control-input" checked="">
                    <label class="custom-control-label" for="Selecionar03">RG</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="Selecionar06" name="Selecionar03" class="custom-control-input">
                    <label class="custom-control-label" for="Selecionar03">IE</label>
                    <input type="text" class="form-control" placeholder="Digite RG ou IE corretamente!">

                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-lg">Alterar</button>
                <a class="btn btn-secondary btn-lg" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>
